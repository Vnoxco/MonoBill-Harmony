{%if schema.settings.col_span_lg.value %}col-lg-{{ ((schema.settings.col_span_lg.value *12 ) / 100) | round(0, 'floor') }} {% endif %}
{%if schema.settings.col_span_xl.value %}col-xl-{{ ((schema.settings.col_span_xl.value *12 ) / 100) | round(0, 'floor') }} {% endif %}
{{ schema.settings.classes.value }}
">
    <blocks></blocks>
</div>