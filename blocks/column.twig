<script schema type="application/json">
    {
        "name": "Column",
        "icon": "columns",
        "description": "",
        "settings": {
            "col_span_xl": {
                "label": "Desktop",
                "type": "range",
                "steps": 5,
                "max": 100,
                "min": 0,
                "append": "%",
                "default": "100"
            },
            "col_span_lg": {
                "label": "Tablet landscape",
                "type": "range",
                "steps": 5,
                "max": 100,
                "min": 0,
                "append": "%",
                "default": "100"
            },
            "col_span_md": {
                "label": "Tablet portrait",
                "type": "range",
                "steps": 5,
                "max": 100,
                "min": 0,
                "append": "%",
                "default": "100"
            },
            "col_span": {
                "label": "Mobile",
                "type": "range",
                "steps": 5,
                "max": 100,
                "min": 0,
                "append": "%",
                "default": "100"
            },
            "classes": {
                "label": "CSS Classes",
                "type": "text"
            }
        }
    }
