<script schema type="application/json">
    {
        "name": "Related pages",
        "icon": "file-alt",
        "settings": {
            "title": {
                "label": "title",
                "type": "text",
                "default": "Related pages"
            }
        }
    }
</script>
{% if page.related_pages | length > 0 %}
    <div class="container">
        <h2 class="mb-4">{{ schema.settings.title.value }}</h2>
        <div class="row">
            {% for relatedPage in page.related_pages %}
                <div class="col-lg-4">
                    <a href="{{ url(relatedPage.link.uri) }}">
                        <div class="left-align">
                            <img src="{% if relatedPage.thumbnail.path %}{{ cdn(relatedPage.thumbnail.path) }}{% else %}https://assets.gomonobill.com/img/placeholder-img.jpg{% endif %}"
                                 class="img-fluid rounded mb-3">
                            <small class="text-muted mb-2 d-block">{{ __('custom.' ~ relatedPage.category_name) }}</small>
                            <h5 class="fw-bold">{{ __('custom.' ~ relatedPage.title) }}</h5>
                            <div class="date">{{ relatedPage.published_at_formatted }}</div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
