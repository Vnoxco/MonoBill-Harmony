<script schema type="application/json">
    {
        "name": "Main change password section",
        "allowed_templates": ["account.change_password.json"]
    }
</script>

{% block content %}

{% from "macros/form_error.twig" import formError %}

<div class="container mt-5">
    <div class="row justify-content-center">
    <div class="col-sm-8 col-md-6 col-xl-4">
        <div class="text-center">
            <h3>{{ __('titles.change_my_password') }}</h3>
        </div>
        <form method="post" action="{{ url('/account/change-password') }}" class="mt-4">
            {{ csrf_input | raw }}
            <label class="floating-input">
                <span class="floating-label">{{ __('forms.current_password') }}</span>
                <input type="password" name="current_password"
                       placeholder="{{ __('forms.current_password') }}"
                       class="form-control"
                       value="">
            </label>
            {{ formError('current_password', true) }}
            <label class="floating-input">
                <span class="floating-label">{{ __('forms.password') }}</span>
                <input type="password" name="password"
                       placeholder="{{ __('forms.password') }}"
                       class="form-control"
                       value="">
            </label>
            {{ formError('password', true) }}
            <label class="floating-input">
                <span class="floating-label">{{ __('forms.confirm_password') }}</span>
                <input type="password" name="password_confirmation"
                       placeholder="{{ __('forms.confirm_password') }}"
                       class="form-control"
                       value="">
            </label>
            {{ formError('password_confirmation', true) }}
            <div class="d-grid gap-2">
                <button class="btn btn-dark btn-block">{{ __('buttons.change_password') }}</button>
                <a href="{{ url('/account') }}" class="btn btn-transparent btn-block"><u>{{ __('buttons.cancel') }}</u></a>
            </div>
        </form>
    </div>
</div>
</div>
{% endblock %}