<script schema type="application/json">
    {
        "name": "Main Page Password Access Section",
        "allowed_templates": [
            "page_password.json"
        ]
    }
</script>

{% block content %}

    {% from "macros/form_error.twig" import formError %}

    <div class="container">
        <h1 class="h2 text-center pt-4">{{ globals.store.name }}</h1>
        <h3 class="h2 text-center mt-5 pt-5"><b>{{ __('titles.password_access') }}</b></h3>
        <div class="row">
            <div class="offset-md-4 col-md-4">
                <p class="text-center mt-5">{{ __('info.password_required_page') }}</p>
                <form action="{{ url('/password-access/' ~ route_parameter('cms_page')) }}" method="post">
                    {{ csrf_input | raw }}
                    <label class="floating-input">
                        <span class="floating-label">{{ __('forms.password') }}</span>
                        <input type="password" name="password"
                               placeholder="{{ __('forms.password') }}"
                               class="form-control"
                               value="{{ old('password') }}">
                    </label>
                    {{ formError('password', true) }}
                    <div class="d-grid gap-2">
                        <button type="submit"
                                class="btn btn-outline-dark btn-block mt-1">{{ __('buttons.enter') }}</button>
                        <a href="{{ url('/') }}"
                           class="btn btn-transparent btn-block mt-1">{{ __('buttons.cancel') }}</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}