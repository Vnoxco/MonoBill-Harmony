<script schema type="application/json">
    {
        "name": "Main Execute Password Reset Section",
        "allowed_templates": [
            "account.execute_password_reset.json"
        ]
    }
</script>

{% block content %}

    {% from "macros/form_error.twig" import formError %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-6 col-xl-4">
                <div class="text-center mb-4">
                    <h3>{{ __('titles.reset_your_password') }}</h3>
                </div>
                <form method="post"
                      action="{{ url('/account/login/password-reset/' ~ request.customer ~ '/' ~ request.code) }}">
                    {{ csrf_input | raw }}
                    <label class="floating-input disabled">
                        <span class="floating-label">{{ __('forms.email') }}</span>
                        <input type="text"
                               placeholder="{{ __('forms.email') }}"
                               class="form-control"
                               value="{{ user.email_address }}" disabled>
                    </label>
                    <label class="floating-input">
                        <span class="floating-label">{{ __('forms.password') }}</span>
                        <input type="password" name="password"
                               placeholder="{{ __('forms.password') }}"
                               class="form-control"
                               value="">
                    </label>
                    {{ formError('password', true) }}
                    <label class="floating-input">
                        <span class="floating-label">{{ __('forms.confirm_password') }}</span>
                        <input type="password" name="password_confirmation"
                               placeholder="{{ __('forms.confirm_password') }}"
                               class="form-control"
                               value="">
                    </label>
                    {{ formError('password_confirmation', true) }}
                    <div class="d-grid gap-2">
                        <button class="btn btn-dark btn-block">{{ __('buttons.reset_password') }}</button>
                        <a href="{{ url('/account/login') }}"
                           class="btn btn-transparent btn-block"><u>{{ __('buttons.cancel') }}</u></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}